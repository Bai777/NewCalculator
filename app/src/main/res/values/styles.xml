<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/margin</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="LightStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#e91e63</item>
        <item name="colorPrimaryDark">#b0003a</item>
        <item name="colorAccent">#ff6090</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkStyle" parent="Theme.MaterialComponents">
        <item name="colorPrimary">#70CF95EC</item>
        <item name="colorPrimaryDark">#2A0C39</item>
        <item name="colorAccent">#74371C44</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CastomeStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#FFD600</item>
        <item name="colorPrimaryDark">#695A03</item>
        <item name="colorAccent">#A7FFE03F</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>