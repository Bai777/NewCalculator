<resources>


    <style name="MyStyleDisplayCalc">
        <item name="android:textSize">@dimen/textSizeDisplay</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MyStyleMainCalcNotnight">
        <item name="android:textSize">@dimen/textSizeButtonMainView</item>
        <item name="android:textColor">@color/btnradionotnight</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MyStyleMainCalcNight">
        <item name="android:textSize">@dimen/textSizeButtonMainView</item>
        <item name="android:textColor">@color/btnradionight</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MyStyleBtnCalc">
        <item name="android:textSize">@dimen/sizeBtnCalc</item>
        <item name="android:textColor">@color/white</item>
